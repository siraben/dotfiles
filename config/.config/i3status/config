# i3status configuration file.
# see "man i3status" for documentation.

# It is important that this file is edited as UTF-8.
# The following line should contain a sharp s:
# ß
# If the above line is not correctly displayed, fix your editor first!
general {
        output_format = "i3bar"
        markup = pango
        interval = 5
        color_separator = "#000000"
        separator = ": "
}

# order += "ipv6"

order += "cpu_temperature all"
order += "disk /"

# order += "ethernet _first_"

# order += "load"
# order += "memory"
order += "volume master"
order += "battery all"
order += "tztime local"
order += "wireless _first_"

wireless _first_ {
        format_up = "W:%quality, %essid, %frequency"
        format_down = "W: down"
}

ethernet _first_ {
        format_up = "E: %ip (%speed)"
        format_down = "E: down"
}


cpu_temperature all {
        format = "%degrees°C"

}

battery all {
        format = "%status %percentage"
        format_down = "No battery"
        status_chr = "/"
        status_bat = "\\"
        status_unk = "? "
        status_full = "-"
        low_threshold = 15
        last_full_capacity = true
        integer_battery_capacity = true
}

tztime local {
        format = "%m-%d %H:%M"
}


volume master {
        format = "V %volume"
        format_muted = "M %volume"
        device = "default"
        mixer = "Master"
        mixer_idx = 0
}

disk "/" {
        format = "%avail"
        low_threshold = 5
}
