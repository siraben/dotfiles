cpu_temperature all {
        format = "%degreesÂ°C"

}

battery all {
        format = "%status %percentage "
        format_down = "No battery"
        status_chr = "âš¡ CHR"
        status_bat = "ðŸ”‹ BAT"
        status_unk = "? UNK"
        status_full = "FULL"
        low_threshold = 10
        last_full_capacity = true
        hide_seconds = true
        integer_battery_capacity = true
}

tztime local {
        format = "%Y-%m-%d %H:%M"
}


volume master {
        format = "VOL: %volume"
        format_muted = "MUT: %volume"
        device = "default"
        mixer = "Master"
        mixer_idx = 0
}

disk "/" {
        format = "%avail"
        low_threshold = 15
        format_below_threshold = "Storage low: %avail (%percentage_avail left)"
}
