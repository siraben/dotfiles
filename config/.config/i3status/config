general {
        colors = true
        interval = 5
}

# order += "ipv6"
order += "cpu_temperature all"
order += "disk /"
order += "wireless _first_"
order += "ethernet _first_"
order += "battery all"
# order += "load"
# order += "memory"
order += "tztime local"
order += "volume master"

wireless _first_ {
        format_up = "W: (%quality at %essid, %frequency)"
        format_down = "W: down"
}

# ethernet _first_ {
