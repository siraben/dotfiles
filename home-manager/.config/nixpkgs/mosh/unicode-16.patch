+int mosh_wcwidth( wchar_t ucs )
+{
+  uint32_t c = static_cast<uint32_t>( ucs );
+
+  /* C0/C1 control characters */
+  if ( c < 0x20 )
+    return ( c == 0 ) ? 0 : -1;
+  if ( c >= 0x7F && c < 0xA0 )
+    return -1;
+
+  /* Combining / zero-width characters */
+  if ( bisearch( c, zero_width, sizeof( zero_width ) / sizeof( zero_width[0] ) - 1 ) )
+    return 0;
+
+  /* Wide characters */
+  if ( bisearch( c, wide, sizeof( wide ) / sizeof( wide[0] ) - 1 ) )
+    return 2;
+
+  /* Surrogates (shouldn't appear but handle gracefully) */
+  if ( c >= 0xD800 && c <= 0xDFFF )
+    return -1;
+
+  /* Noncharacters */
+  if ( ( c & 0xFFFE ) == 0xFFFE ) /* U+xFFFE and U+xFFFF */
+    return -1;
+  if ( c >= 0xFDD0 && c <= 0xFDEF )
+    return -1;
+
+  /* Unassigned in Private Use Areas are typically rendered as single-width */
+  /* Everything else is a normal printable character */
+  return 1;
+}
