+namespace {
+
+struct Interval
+{
+  uint32_t first;
+  uint32_t last;
+};
+
+static bool bisearch( uint32_t ucs, const Interval* table, int max )
+{
+  int min = 0;
+  if ( ucs < table[0].first || ucs > table[max].last )
+    return false;
+  while ( max >= min ) {
+    int mid = ( min + max ) / 2;
+    if ( ucs > table[mid].last )
+      min = mid + 1;
+    else if ( ucs < table[mid].first )
+      max = mid - 1;
+    else
+      return true;
+  }
+  return false;
+}
